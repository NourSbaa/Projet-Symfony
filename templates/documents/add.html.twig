{# templates/documents.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center p-5 bg-image" id="bgimgdoc">
        {{ form_start(documentForm) }}
        <div class="card p-2 w-300" style="width:800px;">
            <div class="card-body">
                <div class="mb-4">
                {{ form_row(documentForm.nom, { 'attr': {'class': 'form-control mb-3'} }) }}
                </div>
                <div class="mb-4">
                {{ form_row(documentForm.prenom, { 'attr': {'class': 'form-control mb-3'} }) }}
                </div>
                <div class="mb-4">
                {{ form_row(documentForm.email, { 'attr': {'class': 'form-control mb-3'} }) }}
                </div>
                <div class="mb-4">
                {{ form_row(documentForm.type_Documents, { 'attr': {'class': 'form-control mb-3'} }) }}
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn w-75 rounded" id="submitBtn" type="submit">Submit</button>
                </div>
            </div>
        </div>
        {{ form_end(documentForm) }}
    </div>
{% endblock %}
