        <link rel="stylesheet" type="text/css" href="{{asset('css/styles.css')}}" />
    {% endblock %}

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
    {% block javascripts %}
    <script>
        $(document).ready(function(){
            $('.carousel').carousel();

            $('.carousel').carousel({
                interval: 3000 
            });

            $('.carousel').on('slid.bs.carousel', function (e) {
                var carousel = $(this);
                var slides = carousel.find('.carousel-item');
                var currentSlide = carousel.find('.carousel-item.active');
                var currentIndex = slides.index(currentSlide);

                if (currentIndex === slides.length - 1) {
                    carousel.carousel(0);
                }
            });
        });
    </script>
    {% endblock %}
</head>
<body>
    {% include "_partiels/_navbar.html.twig" %}
    {% block body %}{% endblock %}
    {% include "_partiels/_footer.html.twig" %}
</body>
</html>
